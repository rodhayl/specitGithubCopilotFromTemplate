{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Extension",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--disable-extensions",
                "${workspaceFolder}/test-workspace"
            ],
            "outFiles": [
                "${workspaceFolder}/out/**/*.js",
            ],
            "preLaunchTask": "${defaultBuildTask}"
        }
    ]
}
