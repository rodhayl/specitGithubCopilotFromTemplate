{
    "files.exclude": {
        "out": true,
    },
    "search.exclude": {
        "out": true,
    },
    "typescript.tsc.autoDetect": "off",
    // Docu extension settings for testing offline mode fixes
    "docu.debug.offlineMode": true,
    "docu.offline.skipStartupCheck": true,
    "docu.offline.forceMode": "auto",
    "docu.offline.checkInterval": 30,
    "docu.offline.maxRetries": 2,
    "docu.debug.autoStart": true,
    "docu.debug.port": 19229,
    "docu.enableDebugLogging": true
}